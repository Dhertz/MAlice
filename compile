#!/usr/bin/perl
my $flag = shift(@ARGV);
if($flag =~ /-s/) {
    print "Clean up assemmbly after compilation.\n";
} else {
   unshift(@ARGV, $flag);
   $flag = '';
}
foreach (@ARGV) {
    *STDERR = *STDOUT;
    print "./compile $_\n";
    `./codegen $_`;
    $_ =~ m/.*\/(\w*)\.alice/;
    my $filename = $1;
    if(($? << 8) == 0) {
	my $arch = `uname -a`;
        if($arch =~ /.*armv6.*/) {
            open my $file, '<', $_; 
            if(<$file> =~ /###include io/) {
                print "gcc -o $filename $_.s\n\n";
                `gcc -g -o $filename $_.s utils.o`;
            } else {
                print "gcc -o $filename $_.s\n\n";
               `gcc -g -o $filename $_.s`;
            }
            close $file;
        } else {
            print "Can only compile to execuable on ARMv6!\n";
	}
        if($flag) { 
            `rm $_.s`;
        } 
    }
}
